"*":

  # --------------------------------------------- #
  # | Packages options
  # --------------------------------------------- #
  "base16-syntax":
    scheme: "Tomorrow"

  "open-terminal-here":
    command: "open -a iTerm.app \"$PWD\""

  "autoclose-html":
    forceInline: ["*"]

  # --------------------------------------------- #
  # | Core packages options
  # --------------------------------------------- #
  "editor":
    backUpBeforeSaving: true
    fontFamily: "Fira Code"
    scrollPastEnd: false
    showIndentGuide: true
    showInvisibles: false
    tabLength: 2
    tabType: "soft"
    softWrapAtPreferredLineLength: true

  "tree-view":
    hideIgnoredNames: true

  "welcome":
    showOnStartup: false

  # --------------------------------------------- #
  # | Themes
  # --------------------------------------------- #
  "core":
    themes: [
      "nucleus-dark-ui"
      "base16-tomorrow-dark-theme"
    ]
