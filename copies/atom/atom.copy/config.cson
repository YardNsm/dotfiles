"*":

    # --------------------------------------------- #
    # | Packages options
    # --------------------------------------------- #
    "base16-syntax":
        scheme: "Paraiso"
    "open-terminal-here":
        command: "open -a iTerm.app \"$PWD\""

    # --------------------------------------------- #
    # | Core packages options
    # --------------------------------------------- #
    "editor":
        backUpBeforeSaving: true
        fontFamily: "Hack"
        scrollPastEnd: true
        showIndentGuide: true
        showInvisibles: true
        tabLength: 4
        tabType: "soft"
    "tree-view":
        hideIgnoredNames: true
    "welcome":
        showOnStartup: false

    # --------------------------------------------- #
    # | Themes
    # --------------------------------------------- #
    "core":
        themes: [
            "nucleus-dark-ui"
            "base16-syntax"
        ]
